<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">

<mapper namespace="com.cafe.diary.content.mapper.ContentMapper">
    <insert id="insert" parameterType="com.cafe.diary.content.domain.ContentForm">
        INSERT INTO content (
            cafe_name,
            location,
            area,
            is_pet_allowed,
            rating,
            review,
            created_time
        )
        VALUES (
            #{cafeName},
            #{location},
            #{area},
            #{isPetAllowed},
            #{rating},
            #{review},
            NOW()
        )
    </insert>
</mapper>